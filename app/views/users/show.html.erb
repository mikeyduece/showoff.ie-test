
<div class='row user-pics'>
  <% current_user.own_pics.each do |post| %>

    <div class="card" style="width: 36rem;">
      <div class='card-title'>
        <img class='rounded-circle' src=<%= post.ig_user[:profile_picture] %> alt="Ig poster pic" />
        <p class='ig-username'><%= post.ig_user[:username] %></p>
        <i class='fa fa-ellipsis-h'></i>
      </div>

      <div class='post-image'>
        <img class='ig-post-pic' src=<%= post.image %> alt="Instagram Post" />
      </div>

      <div class="card-block">
        <div class='fav-comment-block'>
          <i class='glyphicon glyphicon-heart-empty'></i>
          <i class='glyphicon glyphicon-comment'></i>
          <i class='glyphicon glyphicon-bookmark'></i>
        </div>
        <h5 class="likes"><%= post.likes %> likes</h5>
        <div class='tags card-text'>
          <p class='caption'><%= post.caption %></p>
          <% post.tags.each do |tag| %>
            <h6>#<%= tag %></h6>
          <% end %>
        </div>


      </div>
    </div>
  <% end %>
</div>
